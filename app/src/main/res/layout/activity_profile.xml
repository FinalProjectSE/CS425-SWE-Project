<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/FullNameProfile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="Your name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/MobileNumberProfile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:hint="Your phone number"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/BloodGroupProfile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:hint="Your Blood Type"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/cityProfile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:hint="Your City"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/nationalityProfile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:hint="Your Nationality"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/passwordProfile"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:hint="Your Password"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/Signout"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape"
        android:onClick="Signout"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />

    <Button
        android:id="@+id/EditInfo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:onClick="EditInfo"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="EditInfo"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="30sp" />




</LinearLayout>